<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Inventario de GasPro</h1>
  <p class="mb-4">Inventario de productos de GasPro</p>

  <div class="row justify-content-center align-items-right g-2 resposive">
    <div class="col" style="margin-bottom: 20px; ">
      <button class="btn btn-primary text-white w-10" onclick="window.modalAgregar.showModal();">
        Agregar Articulo
      </button>
      <button class="btn btn-success text-white w-10" onclick="window.modal.showModal();">
        Registrar Salida
      </button>
    </div>
  </div>
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Lista de Productos GasPro</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Descripcion</th>
              <th>Cantidad</th>
              <th>Fecha Entrada</th>
              <th>Imagen</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((producto)=> { %>
              <tr>
                <td>
                  <strong>
                    <%=producto.nombre%>
                  </strong>
                </td>
                <td>
                  <strong>
                    <%=producto.description%>
                  </strong>
                </td>
                <td>
                  <strong>
                      <%=producto.quantity%>
                    </strong>
                </td>
                <td>
                  <strong>
                    <%=new Date(producto.fechaIngreso).toLocaleDateString('es-ES')%>
                  </strong>
                </td>
                <td>


                    <button class="btn btn-info btn-icon-split"data-toggle="modal" data-target="#imageModal" data-id=" <%=producto.img%>">
                      <span class="icon text-white-50">
                        <i><img src="../../assets/img/icons/Iconimagen.png" style="height: 25px;width: 25;"></i>
                      </span><span class="text">Ver Imagen</span>
                    </button>
                </td>
                <td>
                  <button class="btn btn-success btn-circle" onclick="editarProducto('<%= producto.id %>')"
                    data-id="<%= producto.id %>">
                    <img src="../../assets/img/icons/iconEditar.png" style="height: 25px;width: 25;">
                  </button>

                  <button class="btn btn-danger btn-circle" onclick="Eliminar('<%=producto.id%>')" id="btnEliminar">
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
