<!-- Modales -->
<div class="modal fade" id="imageModal" name="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">Imagen</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img src="" id="modalImage" alt="Imagen" class="img-fluid">
      </div>
    </div>
  </div>
</div>

<dialog id="modalAgregar" class="rounded ">
  <form name="frmAddDepa" action="/api/productos" method="post">
    <div class="card" style="border-color: white;">
      <div class="card-header bg-opacity-100 text-gray-100 text-center bg-primary">
        <h2><b>Ingrese los datos del nuevo Producto</b></h2>
      </div>
      <div class="card-body">
        <div class="row g-3 pl-5">
          <div class="col-6">
            <h4>Nombre</h4>
            <input type="text" name="nombre" class="form-control bg-light px-4" placeholder="Ingresa el nombre del producto" require
              maxlength="50" required />
          </div>
          <div class="col-6">
            <h4>Cantidad</h4>
            <input type="number" name="quantity" class="form-control bg-light px-4" placeholder="Ingresa la cantidad de productos "
              require maxlength="50" min="1" required />
          </div>
          <div class="col-6">
            <h4>Descripcion</h4>
            <input type="text" name="description" class="form-control bg-light px-4"
              placeholder="Ingrese la descripcion" require maxlength="50" />
          </div>
          <div class="col-6">
            <h4>Fecha</h4>
            <input type="date" name="fechaIngreso" class="form-control bg-light px-4" placeholder="Fecha" require
              maxlength="50" />
          </div>
          <div>
            <h4>Agrega la imagen del producto</h4>
            <input type="file" name="img" class="form-control bg-light px-4"  require
              maxlength="50" />
          </div>
          <div class="col-6" style="margin-top: 10px;">
            <button class="btn btn-success w-100 button-add2" type="submit">
              <a>Registrar</a>
            </button>
          </div>
          <div class="col-6" style="margin-top: 10px;">
            <button class="btn btn-danger w-100 button-add2" type="button" onclick="window.modalAgregar.close();">
              Cerrar
            </button>
          </div>
        </div>
        <br>
        <div class="card-footer bg-primary bg-opacity-100"></div>
      </div>
    </div>
  </form>
</dialog>

