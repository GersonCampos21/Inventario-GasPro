<!-- este script configura la ruta de la imagen que viene desde la base de datos. -->
<script>
  // Evento para cuando se va a mostrar el modal
  $('#imageModal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget); // Botón que disparó el modal
    var imageUrl = button.data('id').trim(); // Extraer la información de data-id y eliminar espacios adicionales
    var modal = $(this);
    var imagePath = "../../assets/inventario/" + imageUrl; // Construir la ruta de la imagen
    modal.find('.modal-body img').attr('src', imagePath); // Actualizar el atributo src de la imagen
});
</script>