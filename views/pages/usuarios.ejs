<!-- Modales -->
<dialog id="modalAgregar" class="rounded ">
  <form name="frmAddDepa" action="/api/tecnicos" method="post">
    <div class="card" style="border-color: white;">
      <div class="card-header bg-opacity-100 text-gray-100 text-center bg-primary">
        <h2><b>Agrega el nuevo tecnico</b></h2>
      </div>
      <div class="card-body">
        <div class="row g-3 pl-5">
          <div class="col-6">
            <h6>Nombre</h6>
            <input type="text" name="nombre" class="form-control bg-light px-4" placeholder="Digita el tecnico" require
              maxlength="50" required />
          </div>
          <div class="col-6">
            <h6>Correo</h6>
            <input type="email" name="email" class="form-control bg-light px-4" placeholder="Ingresa el correo" require
              maxlength="50" min="1" required />
          </div>
          <div class="col-6">
            <h6>Usuario</h6>
            <input type="text" name="user" class="form-control bg-light px-4"
              placeholder="Digita el usuario del tecnico" require maxlength="50" />
          </div>
          <div class="col-6">
            <h6>Rol del tecnico</h6>
            <select class="form-control bg-light px-4" name="rol" id="rol">
              <option value="tecnico">Técnico</option>
              <option value="administrador">Administrador</option>
            </select>
          </div>
          <div class="col-6">
            <h6>Contraseña</h6>
            <input type="password" name="password" class="form-control bg-light px-4"
              placeholder="Escribe la contraseña" require maxlength="50" min="1" required />
          </div>
          <div class="col-6">
            <h6>Confirmar contraseña</h6>
            <input type="password" name="confirmarPassword" class="form-control bg-light px-4"
              placeholder="Confirma tu contraseña" require maxlength="50" />
          </div>
          <div class="col-6" style="margin-top: 10px;">
            <button class="btn btn-success w-100 button-add2" type="submit">
              <a>Registrar</a>
            </button>
          </div>
          <div class="col-6" style="margin-top: 10px;">
            <button class="btn btn-danger w-100 button-add2" type="button" onclick="window.modalAgregar.close();">
              Cerrar
            </button>
          </div>
        </div>
        <br>
        <div class="card-footer bg-primary bg-opacity-100"></div>
      </div>
    </div>
  </form>
</dialog>
