<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Lista de tecnicos GasPro</h1>
  <p class="mb-4">Modulo para administrar los tecnicos de GasPro</p>

  <div class="row justify-content-center align-items-right g-2 resposive">
    <div class="col" style="margin-bottom: 20px; ">
      <button class="btn btn-primary text-white w-10" onclick="window.modalAgregar.showModal();">
        Agregar Tecnicos
      </button>
      <button class="btn btn-success text-white w-10" onclick="window.modal.showModal();">
        Exportar
      </button>
      <!-- Sidebar Toggle (Topbar) -->

    </div>
  </div>
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Tecnicos de GasPro</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Correo</th>
              <th>Usuario</th>
              <th>Contraseña</th>
              <th>Rol</th>
              <th>OPCIONES</th>
            </tr>
          </thead>
          <tbody>
            <% data.forEach((tecnico)=> { %>
              <tr>
                <td>
                  <strong>
                    <%=tecnico.nombre%>
                  </strong>
                </td>
                <td>
                  <strong>
                    <%=tecnico.email%>
                  </strong>
                </td>
                <td>
                  <strong>
                    <%=tecnico.user%>
                  </strong>
                </td>
                <td>
                  <strong>
                    <%=tecnico.password%>
                  </strong>
                </td>
                <td>
                  <strong>
                    <%=tecnico.rol%>
                  </strong>
                </td>
                <td>
                  <button class="btn btn-warning btn-circle" onclick="editarTecnico('<%=tecnico.id %>')"
                    data-id="<%=tecnico.id %>">
                      <img src="../../assets/img/icons/iconEditar.png" style="height: 25px;width: 25;">
                  </button>
                  </a>
                  <button class="btn btn-danger btn-circle" onclick="EliminarTecnico('<%=tecnico.id%>')" id="btnEliminar">
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
